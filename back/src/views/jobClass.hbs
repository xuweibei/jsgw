{{#>default}}
<div class="job-class-container">
  <div class="job-class-top">
    <span>职位分类</span>
    <button type="button" class="btn">新增</button>
  </div>
  <div class="table-container">
    <table
      id="table"
      class="text-center table table-striped table-borderless"
      data-pagination="true">
      {{!-- <thead>
        <tr>
          <th data-field="id">ID</th>
          <th data-field="name">Item Name</th>
          <th data-field="price">Item Price</th>
        </tr>
      </thead> --}}
    </table>
    <script>
      var $table = $('#table')
        $(function() {
          $table.bootstrapTable({
            toolbar: '.toolbar',
            columns: [{
              title: '分类名称',
              field: 'name'
            }, {
              title: '排序',
              field: 'sort'
            }, {
              title: '操作',
              field: 'opt'
            }],
            data: [{
              name: '分类一',
              sort: 12,
              opt: operateFormatter()
            },{
              name: '分类二',
              sort: 13,
              opt: operateFormatter()
            },{
              name: '分类三',
              sort: 11,
              opt: operateFormatter()
            },{
              name: '分类四',
              sort: 10,
              opt: operateFormatter()
            }],
          })
          function operateFormatter(value, row, index) {
            return [
              '<a class="like opt" href="javascript:void(0)" title="Like">编辑</a>',
              '<a class="remove opt" href="javascript:void(0)" title="Remove">删除</a>',
              '<a class="like opt" href="javascript:void(0)" title="Remove">启用</a>'
            ].join('')
          }
        })
    </script>
  </div>
</div>
{{/default}}