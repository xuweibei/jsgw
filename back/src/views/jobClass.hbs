{{#>default}}
<div class="job-class-container">
  <div class="job-class-top">
    <span>职位分类</span>
    <button type="button" class="btn" data-toggle="modal" data-target="#exampleModalCenter">
      新增
    </button>
  </div>
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header border-bottom-0 justify-content-center ">
          <h5 class="modal-title  font-weight-bolder" id="exampleModalCenterTitle">新增</h5>
        </div>
        <form class="w-75 job-form">
          <div class="form-group row">
            <label for="colFormLabel" class="col-sm-3 col-form-label job-form-label">名称:</label>
            <div class="col-sm-9">
              <input type="email" class="form-control job-form-input" id="colFormLabel" placeholder="请输入">
            </div>
          </div>
          <div class="form-group row">
            <label for="colFormLabel" class="col-sm-3 col-form-label job-form-label">排序:</label>
            <div class="col-sm-9">
              <input type="email" class="form-control job-form-input" id="colFormLabel" placeholder="请输入">
            </div>
          </div>
        </form>
        <div class="modal-footer border-top-0 job-modal-footer justify-content-center">
          <button type="button" class="btn btn-secondary btn-left" data-dismiss="modal">返回</button>
          <button type="button" class="btn btn-primary btn-right">保存</button>
        </div>
      </div>
    </div>
  </div>
  <div class="table-container">
    <table id="table" class="text-center table table-striped table-borderless" data-pagination="true">
      {{!-- <thead>
        <tr>
          <th data-field="id">ID</th>
          <th data-field="name">Item Name</th>
          <th data-field="price">Item Price</th>
        </tr>
      </thead> --}}
    </table>
    <script>
      var $table = $('#table')
      $(function () {
        $table.bootstrapTable({
          toolbar: '.toolbar',
          columns: [{
            title: '分类名称',
            field: 'name'
          }, {
            title: '排序',
            field: 'sort'
          }, {
            title: '操作',
            field: 'opt'
          }],
          data: [{
            name: '分类一',
            sort: 12,
            opt: operateFormatter()
          }, {
            name: '分类二',
            sort: 13,
            opt: operateFormatter()
          }, {
            name: '分类三',
            sort: 11,
            opt: operateFormatter()
          }, {
            name: '分类四',
            sort: 10,
            opt: operateFormatter()
          }],
        })
        function operateFormatter(value, row, index) {
          return [
            '<a class="like opt" href="javascript:void(0)" title="Like">编辑</a>',
            '<a class="remove opt" href="javascript:void(0)" title="Remove">删除</a>',
            '<a class="like opt" href="javascript:void(0)" title="Remove">启用</a>'
          ].join('')
        }
      })
    </script>
  </div>
</div>
{{/default}}